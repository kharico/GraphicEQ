<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        style="@style/CodeFont"
        android:text="@string/button_import"
        android:drawableBottom="@drawable/ic_file_download_black_24dp"
        android:onClick="importFile" />
    <Button
        style="@style/CodeFont"
        android:text="@string/button_effects"
        android:drawableBottom="@drawable/ic_keyboard_voice_black_24dp"
        android:onClick="openEffects"/>

</LinearLayout>

